<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaTokenizingTextBox.Sample.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:c="clr-namespace:AvaloniaTokenizingTextBox.Controls;assembly=AvaloniaTokenizingTextBox"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		Width="800" Height="600"
        x:Class="AvaloniaTokenizingTextBox.Sample.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaTokenizingTextBox.Sample">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<DockPanel>
		<c:TokenizingTextBox Name="txtBox"
			                 DockPanel.Dock="Top"
							 TokenDelimiter=";"
							 Items="{Binding Tokens}"
							 SelectedItem="{Binding SelectedItem}" />
        <!--<ListBox Items="{Binding #txtBox.Items}" />-->
		<!--<ListBox Items="{Binding #txtBox.Tokens}" />-->
		<!--<ListBox Name="lstBox" Items="{Binding Tokens}" SelectedItem="{Binding SelectedItem}"/>-->
		<Button Command="{Binding TestCommand}" Content="Debug" HorizontalAlignment="Center"/>
		
	</DockPanel>
	

</Window>
